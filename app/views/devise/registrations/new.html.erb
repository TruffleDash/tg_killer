<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <div class="w-24 h-24 bg-blue rounded-full mx-auto"></div>
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-darkPurple">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-3" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :name, class: "block text-sm font-medium leading-6" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "block w-full rounded-md border-0 py-1.5 px-2.5 shadow-sm ring-1 ring-inset ring-blue placeholder:text-blue focus:ring-2 focus:ring-inset focus:ring-blue sm:text-sm sm:leading-6" %>
      </div>

      <div>
        <%= f.label :email, class: "block text-sm font-medium leading-6"  %>
        <%= f.email_field :email, autocomplete: "email", class: "block w-full rounded-md border-0 py-1.5 px-2.5 shadow-sm ring-1 ring-inset ring-blue placeholder:text-blue focus:ring-2 focus:ring-inset focus:ring-blue sm:text-sm sm:leading-6" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium leading-6" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "block w-full rounded-md border-0 py-1.5 px-2.5 shadow-sm ring-1 ring-inset ring-blue placeholder:text-blue focus:ring-2 focus:ring-inset focus:ring-blue sm:text-sm sm:leading-6" %>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium leading-6" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full rounded-md border-0 py-1.5 px-2.5 shadow-sm ring-1 ring-inset ring-blue placeholder:text-blue focus:ring-2 focus:ring-inset focus:ring-blue sm:text-sm sm:leading-6" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "bg-purple text-white py-2 px-9 rounded hover:bg-darkPurple" %>
      </div>
    <% end %>

    <div class="py-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
