<h2 class="text-3xl font-bold underline text-blue-800">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "bg-white bg-gradient-to-r from-blue-200 to-purple-200 p-8 rounded-lg" }) do |f| %>
  <div class="field mb-4">
    <%= f.label :email, class: "block text-blue-800" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 border border-gray-300 rounded" %>
  </div>

  <div class="field mb-4">
    <%= f.label :password, class: "block text-blue-800" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-2 border border-gray-300 rounded" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-4">
      <%= f.check_box :remember_me, class: "mr-2" %>
      <%= f.label :remember_me, class: "text-blue-800" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "bg-purple-800 text-white py-2 px-4 rounded hover:bg-purple-700" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

